{# app/Resources/TwigBundle/views/Exception/error.html.twig #}
{% extends "OCCoreBundle::layout.html.twig" %}

{% block title %}
    Une erreur est survenue: {{ status_text }}
{% endblock %}

{% block body %}
    <div class="container w">
        <div class="row centered">

        <div class="col-lg-12" style="min-height: 500px;margin-top: 15%;">
            <br><br>
            <h1>Une erreur est survenue</h1>
            <br><br>
            {% if status_code == 404 %}
                <h2>Erreur {{ status_code }} !</h2>
                <br><br>
                <h2>La page demandée n'existe pas ou plus.</h2>
                <br><br>
            {% else %}
                <br><br>
                <h2>Nous mettons tout en oeuvre pour corriger le problème.</h2>
                <br><br>
                <h3>Veuillez nous excuser pour la gêne occasionnée.</h3>
                <br><br>
            {% endif %}
            <br><br>
            </div>
        </div>
    </div>

{% endblock body %}