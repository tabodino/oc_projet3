{% extends "OCCoreBundle::layout.html.twig" %}

{% block title %}
    Votre réservation - {{ parent() }}
{% endblock %}

{% block body %}
<div id="blue">
    <div class="container">
        <div class="row centered">
            <div class="col-lg-8 col-lg-offset-2">
                <br>
                <h4>CONFIRMATION DE VOTRE RESERVATION</h4>
                <p>RESERVATION {{ visitor != null ? visitor.ticket.codeReservation : 'NON TROUVEE' }} </p>
            </div>
        </div><!-- row -->
    </div><!-- container -->
</div><!--  bluewrap -->

    <div class="container">
        {% if visitor !=null %}
            <div class="row">
                <br>
                <h3 class="text-center">Détail de votre réservation</h3><br>


                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title"><img src="{{ asset('bundles/occore/img/logo-2.jpg') }}" alt="logo joconde"> Musée du Louvre<span class="pull-right">Billet n° {{ visitor.ticket.codeReservation }}</span></h4>
                        </div>
                        <div class="panel-body">
                            <p><i class="fa fa-user"></i> Réservation au nom de : {{ visitor.firstname|capitalize }} {{ visitor.lastname|capitalize }}</p>
                            <p><i class="fa fa-money"></i> Tarif {{ visitor.price.category}} <strong>{{ visitor.price.price }}</strong> €</p>
                            <p><i class="fa fa-ticket"></i> Billet valable le : {{ visitor.ticket.dateReservation|date('d/m/Y') }}
                                {%  if visitor.ticket.fullDay == 0 %}
                                    à partir de 14h00
                                {% else %}
                                    toute la journée
                                {% endif %}
                            </p>
                        </div>


                    </div>

            </div>
            <br><br>
            <div class="row centered">
                <div class="col-lg-12">

                    <a href="{{ path('oc_core_homepage') }}" class="btn btn-bg btn-primary"><i class="fa fa-home"></i> Retour à l'acccueil du site</a>

                </div>
                <div id="fb-root"></div>
                <script>(function(d, s, id) {
                        var js, fjs = d.getElementsByTagName(s)[0];
                        if (d.getElementById(id)) return;
                        js = d.createElement(s); js.id = id;
                        js.src = "//connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v2.6";
                        fjs.parentNode.insertBefore(js, fjs);
                    }(document, 'script', 'facebook-jssdk'));</script>

                <div class="col-lg-12">
                    <p>Partagez l'évenement sur les réseaux sociaux !</p>

                    <div class="fb-share-button" data-href="http://localhost/oc_projet3/web/" data-layout="icon" data-mobile-iframe="true"></div>
                </div>




            </div>

            <br><br><br>

        {% else %}
            <div class="row centered">
                <div class="col-lg-12">
                    <h3>Votre code de réservation semble érroné.</h3>
                    <p>Vous avez actuellement aucune réservation pour le musée.</p>
                </div>
                <br>
                <div class="col-lg-12">
                    <h3>Que souhaitez-vous faire maintenant ?</h3>
                    <br><br>
                    <a href="{{ path('oc_core_reservation') }}" class="btn btn-lg btn-info btn-block"><i class="fa fa-plus"></i> Ajouter une réservation</a>
                    <br>
                    <a href="{{ path('oc_core_pricelist') }}" class="btn btn-lg btn-default btn-block"><i class="fa fa-eye"></i> Consulter les tarifs</a>
                </div>
                <br><br><br>
                <br><br><br>

            </div>

        {% endif %}
    </div>
{% endblock %}
